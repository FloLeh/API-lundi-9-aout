<center>
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Cherchez la cryptomonnaie que vous voulez</h1>
  </div>
  <%= form_for @crypto,url: {action: "search"}, html: {class: "form-signin w-25"} do |f| %>
    Entrez un nom de cryptomonnaie :
    <%= f.text_field :name, class: "form-control", placeholder: "Bitcoin,Ethereum..." %>
    <br /> <br />
    <%= f.submit "Chercher", class: "btn btn-lg btn-primary btn-block" %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% end %>
  <p><a href=<%= list_path %>></a></p>
</center>
